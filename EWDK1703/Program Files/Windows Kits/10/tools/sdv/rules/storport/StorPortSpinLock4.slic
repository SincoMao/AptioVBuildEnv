#include "ntddk_slic.h"

state {
	enum {unlocked,locked} s = unlocked;
}

StorPortReleaseSpinLock.entry
{
	if (s == unlocked) {
		abort "The driver is calling $fname without first acquiring the spin lock.";
	} else {
		halt;
	}
}

StorPortAcquireSpinLock.exit
{
	s = locked;
}
