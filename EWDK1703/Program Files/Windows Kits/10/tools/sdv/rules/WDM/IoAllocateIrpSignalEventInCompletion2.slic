#include "slic_base.h"

state 
{
      enum {notsignaled,signaled,initialized} SignalState = initialized;
} 
watch KeInitializeEvent.entry.$1;


IoAllocateIrp.exit
{
    if($return==NULL)
    {
        halt;
    }
}

